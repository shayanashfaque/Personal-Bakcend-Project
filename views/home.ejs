<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Footlinks - Book Football Courts</title>
  <style>
    * { box-sizing: border-box; margin: 0; padding: 0; font-family: Arial, sans-serif; }
    body { background: #f8f9fa; color: #333; }
    header { background: #0a6847; color: #fff; padding: 1rem 2rem; display: flex; justify-content: space-between; align-items: center; }
    header h1 { font-size: 1.5rem; }
    header nav a { color: #fff; text-decoration: none; margin-left: 1.5rem; font-weight: bold; }
    .hero { text-align: center; padding: 3rem 1rem; background: url('https://images.unsplash.com/photo-1508766917616-d22f3f1eea14') no-repeat center/cover; color: #fff; }
    .hero h2 { font-size: 2rem; margin-bottom: 1rem; text-shadow: 1px 1px 3px rgba(0,0,0,0.5); }
    .search-bar { margin-top: 1rem; display: flex; justify-content: center; gap: 0.5rem; }
    .search-bar input, .search-bar button { padding: 0.75rem; border: none; border-radius: 5px; }
    .search-bar input { flex: 1; max-width: 200px; }
    .search-bar button { background: #0a6847; color: #fff; cursor: pointer; }
    .container { padding: 2rem; }
    .grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); gap: 1.5rem; }
    .card { background: #fff; border-radius: 10px; overflow: hidden; box-shadow: 0 2px 6px rgba(0,0,0,0.1); transition: 0.2s; }
    .card:hover { transform: scale(1.02); }
    .card img { width: 100%; height: 150px; object-fit: cover; }
    .card-body { padding: 1rem; }
    .card-body h3 { margin-bottom: 0.5rem; font-size: 1.2rem; }
    .card-body p { font-size: 0.9rem; color: #555; }
    .book-btn { display: block; margin-top: 1rem; text-align: center; padding: 0.5rem; background: #0a6847; color: #fff; text-decoration: none; border-radius: 5px; }
    footer { text-align: center; padding: 1rem; background: #0a6847; color: #fff; margin-top: 2rem; }
  </style>
</head>
<body>
  <header>
    <h1>Footlinks</h1>
    <nav>
      <a href="#">Home</a>
      <a href="#">Courts</a>
      <a href="#">Bookings</a>
      <a href="#">Profile</a>
    </nav>
  </header>

  <section class="hero">
    <h2>Find & Book Your Perfect Football Court</h2>
    <div class="search-bar">
      <input type="text" placeholder="Enter location..." />
      <input type="date" />
      <input type="time" />
      <button onclick="searchCourts()">Search</button>
    </div>
  </section>

  <main class="container">
    <h2 style="margin-bottom:1rem;">Available Courts Near You</h2>
    <div class="grid" id="courtGrid">
      <!-- Dynamic courts will be inserted here -->
    </div>
  </main>

  <footer>
    <p>&copy; 2025 Footlinks. All rights reserved.</p>
  </footer>

  <script>
    const courts = [
      { name: "Greenfield Arena", location: "Downtown", price: "$40/hr", img: "https://images.unsplash.com/photo-1521412644187-c49fa049e84d" },
      { name: "Urban Turf", location: "City Center", price: "$50/hr", img: "https://images.unsplash.com/photo-1508609349937-5ec4ae374ebf" },
      { name: "Kickoff Stadium", location: "Uptown", price: "$35/hr", img: "https://images.unsplash.com/photo-1518098268026-4e89f1a2cd8e" },
      { name: "Goalzone Futsal", location: "Westside", price: "$45/hr", img: "https://images.unsplash.com/photo-1517649763962-0c623066013b" }
    ];

    function renderCourts() {
      const grid = document.getElementById("courtGrid");
      grid.innerHTML = "";
      courts.forEach(court => {
        const card = document.createElement("div");
        card.className = "card";
        card.innerHTML = `
          <img src="${court.img}" alt="${court.name}">
          <div class="card-body">
            <h3>${court.name}</h3>
            <p>${court.location} â€¢ ${court.price}</p>
            <a href="#" class="book-btn">Book Now</a>
          </div>
        `;
        grid.appendChild(card);
      });
    }

    function searchCourts() {
      alert("Search functionality is demo-only ðŸš€");
    }

    renderCourts();
  </script>
</body>
</html>
